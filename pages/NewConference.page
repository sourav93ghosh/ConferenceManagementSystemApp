<apex:page standardController="Speaker_Session__c" sidebar="false">
  <apex:form >
      <apex:pageBlock title="New Conference">
          <apex:pageBlockSection title="Conference Detail" columns="1">
              <apex:inputField value="{! Speaker_Session__c.Session__c}"/>
              <apex:inputField value="{! Speaker_Session__c.Speaker__c}"/>
          </apex:pageBlockSection>
          <apex:pageBlockButtons >
              <apex:commandButton value="Save" action="{! save}"/>
              <apex:commandButton value="Save & New" action="{! quicksave}"/>
              <apex:commandButton value="Cancel" action="{! cancel}"/>
          </apex:pageBlockButtons>
      </apex:pageBlock>
  </apex:form>
</apex:page>