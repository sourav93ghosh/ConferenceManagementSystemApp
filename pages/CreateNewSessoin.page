<apex:page sidebar="false" setup="false" showHeader="false" standardController="Session__c" extensions="NewSession_Ext" title="New Session">
    <apex:stylesheet value="{! $Resource.CSSFile}"/>
    <apex:includeScript value="{! $Resource.JSFile}"/>
    <apex:includeScript value="{! $Resource.jQueryFile}"/>
    
    <head>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css" />
    <link rel="stylesheet" media="print" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css" />
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
    </head>
    
    <script>  
        function dropdown(){
            document.getElementById("menu").style.display = "block";
        }
        function vanish(){
            document.getElementById("menu").style.display = "none";
        }   
    </script>
    
    <apex:form >
        
    <!-- Navigationbar -->    
      <nav class="navbar navbar-inverse">
          <div class="container-fluid">
              <ul class="nav navbar-nav">
                  <li><a href="MySpeakerList">MySpeaker</a></li>
                  <li><a href="MySessionList">MySession</a></li>
                  <li class="dropdown" onmouseover="dropdown()" onmouseout="vanish()">
                      <a href="#">More
                      <span class="caret"></span></a>
                      <ul id="menu" class="dropdown-menu" style="display: none">
                          <li style="margin-left: 0px"><a href="CreateNewSpeaker">Create Speaker</a></li>
                          <li style="margin-left: 0px"><a href="CreateNewSessoin">Create Session</a></li>
                          <li style="margin-left: 0px"><a href="CreateSpeakerSession">Assign Speaker</a></li>
                      </ul>
                  </li> 
              </ul>
              <ul class="nav navbar-nav navbar-right">                 
                  <li>
                      <a href="#" data-toggle="modal" data-target="#myModal">Logout</a>
                      <div id="myModal" class="modal fade" role="dialog">
                          <div class="modal-dialog">
                          <!-- Modal content-->
                            <div class="modal-content">
                                <div class="modal-body">
                                    <h4 style="margin-left: 30%">Do You want to Logout?</h4><br/><br/>
                                    <a style="margin-left: 40%" href="/secur/logout.jsp">Yes</a>&nbsp;&nbsp;
                                    <a href="#" data-dismiss="modal">No</a>
                                </div>
                            </div>
                          </div>
                        </div>
                  </li>
              </ul>
          </div>
       </nav>
       
       <apex:pageBlock title="New Session">
           <apex:pageBlockSection columns="1">
               <apex:outputLabel value="{! errMsg}" style="color: red;margin-left: 12%"></apex:outputLabel>
               <apex:inputField required="true" style="width: 50%" styleClass="form-control" value="{! Session__c.Name}"/>
               <apex:inputField required="true" style="width: 50%" styleClass="form-control" value="{! Session__c.Date_and_Time__c}"/>
               <apex:inputField required="true" style="width: 50%" styleClass="form-control" value="{! Session__c.Duration__c}"/>
               <apex:inputField required="true" style="width: 50%" styleClass="form-control" value="{! Session__c.Level__c}"/>
               <apex:inputField required="true" style="width: 50%" styleClass="form-control" value="{! Session__c.Status__c}"/>
               <apex:inputField style="width: 50%" styleClass="form-control" value="{! Session__c.Description__c}"/>
           </apex:pageBlockSection>
           <apex:pageBlockButtons location="top">
               <apex:commandButton value="Save" action="{! saveSession}"/>
               <apex:commandButton value="Cancel" action="{! cancel}"/>
           </apex:pageBlockButtons>
       </apex:pageBlock>
       
    </apex:form>
       
</apex:page>